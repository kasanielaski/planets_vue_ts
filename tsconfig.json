{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "strict": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "types": ["webpack-env", "chai", "jest"],
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "exclude": ["node_modules"]
}
